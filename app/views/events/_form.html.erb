<div class="col-lg-12 mx-auto mt-3">
   <div class="card">
      <div class="card-header">
        <h2 class="text-center card-title"> 
        <% if action_name == 'new' %> 
           <%= 'Add Event ' %>
        <% else %> 
         <%= 'Edit Event ' %>
        <% end %>
        </h2>
      </div>
 
      <div class="card-body"> 
        <%= form_for(@event, html: { class: 'row g-3' }) do |f| %>
          <div class="col-md-6">
             <%= f.label :name, class:"form-label" %>
             <%= f.text_field :name, autofocus: true, autocomplete: 'name', class: 'form-control', placeholder: 'Name' %>
          </div>

          <div class="col-md-6">
             <%= f.label :description, class:"form-label" %>
             <%= f.text_field :description, autofocus: true, autocomplete: 'description', class: 'form-control', placeholder: 'Description' %>
          </div>

          <div class="col-md-12">
             <%= f.label :location, class:"form-label" %>
             <%= f.text_field :location, autofocus: true, autocomplete: 'location', class: 'form-control', placeholder: 'Location' %>
          </div>

          <div class="col-md-6">
             <%= f.label :date, class:"form-label" %>
             <%= f.date_field :date, autofocus: true, autocomplete: 'date', class: 'form-control', placeholder: 'Event Date' %>
          </div>

          <div class="col-md-6">
             <%= f.label :image, class:"form-label" %>
             <%= f.file_field :image, class: 'form-control'%>
          </div>
        
          <div class="col-12">
            <button type="submit" class="btn btn-primary">
            <% if action_name == 'new' %> 
              <%= 'Add Event ' %>
            <% else %> 
            <%= 'Update Event ' %>
            <% end %>
            </button>
          </div>
        <% end %>
      </div>
   </div>
</div>