<div class="col-lg-12 mx-auto mt-3">
   <div class="card">
      <div class="card-header d-flex ">
        <div style="width: 50%" class="d-flex justify-content-end">
        <h2 class="card-title"> 
           <% if action_name == 'my_event' %>
             My Events
           <% end %>
           <% if action_name == 'past' %>
             Past Events
           <% end %>
           <% if action_name == 'current' %>
             Current Events
           <% end %>
           <% if action_name == 'upcoming' %>
             Upcoming Events
           <% end %>
         </h2>
         </div>
         <% if current_user.admin? %>
        <div style="width: 50%" class="d-flex justify-content-end">
        <a href="/events/new" class="btn btn-primary">Create Event</a>
        </div>
        <% end %>
      </div>
      <div class="card-body row">