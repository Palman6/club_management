<div class="col-lg-8 mx-auto">
   <div class="card">
      <div class="card-header">
      <h2 class="text-center card-title"> Update User Details </h2>
      </div>
      <div class="card-body">
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
            <%= bootstrap_devise_error_messages! %>

            <div class="form-group">
              <%= f.label :name %>
              <%= f.text_field :name, autofocus: true, autocomplete: 'name', class: 'form-control' %>
            </div>

            <div class="form-group  mt-3">
              <%= f.label :designation %>
              <%= f.collection_radio_buttons :gender, User.genders.keys, :to_s, :humanize, class: 'form-control'%>
            </div>

            <div class="form-group mt-2">
              <%= f.label :email %>
              <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control' %>
            </div>

            <div class="form-group">
              <%= f.label :designation %>
              <%= f.text_field :designation, autofocus: true, autocomplete: 'designation', class: 'form-control' %>
            </div>

            <div class="form-group">
              <%= f.label :company %>
              <%= f.text_field :company, autofocus: true, autocomplete: 'company', class: 'form-control' %>
            </div>

            <div class="form-group">
              <%= f.label :address %>
              <%= f.text_field :address, autofocus: true, autocomplete: 'address', class: 'form-control' %>
            </div>

            <div class="form-group mt-3">
              <%= f.label :role %>
              <%= f.collection_radio_buttons :role, User.roles.keys, :to_s, :humanize%>
            </div>

            <div class="form-group">
               <%= link_to t('.back'), :back, class: 'btn btn-primary mt-3' %>
               <%= f.submit t('.update'), class: 'btn btn-primary mt-3' %>
            </div>
          <% end %>

      </div>
   </div>
</div>
