<div class="col-lg-12 mx-auto mt-3">
   <div class="card">
      <div class="card-header">
        <h2 class="text-center card-title"> 
        <% if action_name == 'new' %> 
           <%= 'Add News' %>
        <% else %> 
         <%= 'Edit News' %>
        <% end %>
        </h2>
      </div>
 
      <div class="card-body"> 
        <%= form_for(@news, html: { class: 'row g-3' }) do |f| %>
          <div class="col-md-6">
             <%= f.label :title, class:"form-label" %>
             <%= f.text_field :title, autofocus: true, autocomplete: 'title', class: 'form-control', placeholder: 'Title' %>
          </div>

          <div class="col-md-6">
             <%= f.label :content, class:"form-label" %>
             <%= f.text_field :content, autofocus: true, autocomplete: 'content', class: 'form-control', placeholder: 'Content' %>
          </div>

           <div class="col-md-6">
             <%= f.label :image, class:"form-label" %>
             <%= f.file_field :image, class: 'form-control'%>
          </div>
        
          <div class="col-12">
            <button type="submit" class="btn btn-primary">
            <% if action_name == 'new' %> 
              <%= 'Add News ' %>
            <% else %> 
            <%= 'Update News ' %>
            <% end %>
            </button>
          </div>
        <% end %>
      </div>
   </div>
</div>