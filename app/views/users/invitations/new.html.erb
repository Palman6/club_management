<div class="col-lg-12 mx-auto mt-3">
   <div class="card">
      <div class="card-header">
        <h2 class="text-center card-title"> 
        <%= t "devise.invitations.new.header" %>
        </h2>
      </div>
 
      <div class="card-body"> 
          <%= form_for(resource, as: resource_name, url: invitation_path(resource_name), html: { method: :post, class: 'row g-3' }) do |f| %>
            <% resource.class.invite_key_fields.each do |field| -%>
            <%= bootstrap_devise_error_messages! %>
              <div class="col-md-6">
                <%= f.label :name, class:"form-label" %>
                <%= f.text_field :name, autofocus: true, autocomplete: 'name', class: 'form-control', placeholder: 'Name', required: true%>
              </div>
               <div class="col-md-6">
                <%= f.label field, class:"form-label" %>
                <%= f.text_field field, autofocus: true, autocomplete: 'email', class: 'form-control', placeholder: 'Email', required: true%>
              </div>
              <div class="form-group">
              <%= f.label :gender %>
              <%= f.collection_radio_buttons :gender, User.genders.keys, :to_s, :humanize, class: 'form-control'%>
              </div>
              <div class="form-group">
              <%= f.label :company %>
              <%= f.text_field :company, autofocus: true, autocomplete: 'company', class: 'form-control' %>
              </div>
              <div class="col-md-6">
                <%= f.label :address, class:"form-label" %>
                <%= f.text_field :address, autofocus: true, autocomplete: 'address', class: 'form-control', placeholder: 'address' %>
              </div>
              <div class="col-md-6">
                <%= f.label :designation, class:"form-label" %>
                <%= f.text_field :designation, autofocus: true, autocomplete: 'designation', class: 'form-control', placeholder: 'Designation' %>
              </div>
              <div class="col-12">
                <%= f.submit t("devise.invitations.new.submit_button"), class: "btn btn-primary" %>
              </div>
            <% end -%>
        <% end %>
      </div>
   </div>
</div>