<div class="col-lg-8 mx-auto mt-3">
   <div class="card">
      <div class="card-header">
      <h2 class="text-center card-title"> My Profile </h2>
      </div>
      <div class="card-body d-flex row">
      <div class="col-sm-10 mb-3">
          <img src="https://play-lh.googleusercontent.com/C9CAt9tZr8SSi4zKCxhQc9v4I6AOTqRmnLchsu1wVDQL0gsQ3fmbCVgQmOVM1zPru8UH=w240-h480-rw" class="rounded" alt="profile">
       </div>
       <div class="col-sm-5">
          <p><strong>Name:</strong> <%= current_user.name %></p>
       </div>
        <div class="col-sm-5">
            <p><strong>Email:</strong> <%= current_user.email %></p>
       </div>
       <div class="col-sm-5">
            <p><strong>Gender:</strong> <%= current_user.gender %></p>
       </div>
       <div class="col-sm-5">
          <p><strong>Designation:</strong> <%= current_user.designation %></p>
       </div>
        <div class="col-sm-5">
            <p><strong>Company:</strong> <%= current_user.company %></p>
       </div>
       <div class="col-sm-5">
          <p><strong>Role:</strong> <%= current_user.role %></p>
       </div>

       <div class="form-group">
        <%= link_to edit_user_registration_path, class:"btn btn-primary" do %>
        Update Profile
        <% end %>
       </div>
      </div>
   </div>
</div>